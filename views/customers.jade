extends layout
block content
   div.container
      div.col-lg-12.panel.panel-default
         h1.page-header.text-muted= title
         div
            #customers
            table.table.table-hover.table-striped.table-condensed
               tr
                  th ID
                  th Name
                  th Contact name
                  th Phone
                  th Fax
                  th
               for customer in customers
                  tr
                     td= customer._id
                     td
                        a(href="/customers/" + customer._id + "/" + customer.companyName) #{customer.companyName}
                     td= customer.contactName
                     td= customer.phone
                     td= customer.fax
                     td
                        form(class="buttonForm" method="post" action="/customers/delete/" + customer._id)
                           button.btn.btn-danger.btn-sm#deleteButton(type= "submit", title="Delete", onclick= "return confirm('Really delete customer?');", style= "float: right")
                              i(class="glyphicon glyphicon-trash")
                        form(class="buttonForm" method="get" action="/customers/" + customer._id)
                           button.btn.btn-primary.btn-sm.btn-glyph#editButton(class="editButton" type= "submit", title="Edit", value= "Edit", style= "float: right")
                              i(class="glyphicon glyphicon-pencil")
      input.btn.btn-primary#backButton(type= "button", value= "Back")