extends layout
block content
   div.container
      #order
      div.col-lg-12.panel.panel-default
         h1.page-header.text-muted= title
         div.col-sm-6
            p Costumer: #{order.customer.contactName} // Man skal kunne trykke her!
            p ID:       #{order._id}
            p Date:     #{order.orderDate}
            p Required: #{order.requiredDate}
            p Shipped:  #{order.shippedDate}
         div.col-sm-6
            p Employee: #{order.employee.firstName + " " + order.employee.lastName} // Man skal kunne trykke her!
            p Name:     #{order.shipName}
            p Address:  #{order.shipAddress}
            p City:     #{order.shipCity}
            p Zip:      #{order.shipPostalCode}
            p Country:  #{order.shipCountry}
         div.panel-default
            table.table.table-hover.table-striped.table-condensed
               tr.tableHeader
                  th Product
                  th Unit price
                  th Quantity
                  th Discount
                  th Price
               #orderDetails
               #price
               - var sum= 0;
               for orderDetail in orderDetails
                  - var price= orderDetail.unitPrice * orderDetail.quantity
                  tr
                     td= orderDetail.product.name
                     td= orderDetail.unitPrice
                     td= orderDetail.quantity
                     td= orderDetail.discount
                     td= price
                  - sum= sum + price
               tr
                  th TOTAL
                  th
                  th
                  th
                  th= sum
      a.btn.btn-primary(href="/").white Go Back