extends layout

block content

    div.container
        div.col-lg-12
            div
                table.table.table-hover.table-bordered.table-striped.table-condensed
                    caption.text-left
                        h1.text-muted Orders
                    tr
                        th ID
                        th Date
                        th Name
                        th Address
                    #orders
                        for order in orders
                            tr
                                td= order._id
                                td= order.orderDate
                                td= order.shipName
                                td= order.shipAddress
                button.btn.btn-success
                    span ok
                    span.glyphicon.glyphicon-arrow-down
                button.btn.btn-danger ok
                button.btn.btn-default ok