extends layout
block content
   div.container
      #employee
      div.col-lg-12.panel.panel-default
         h1.page-header.text-muted= title
         div.col-sm-6
            p ID:                #{employee._id}
            p First name:        #{employee.firstName}
            p Title:             #{employee.title}
            p Birthdate:         #{employee.birthDate}
            p Address:           #{employee.address}
            p region:            #{employee.region}
            p country:           #{employee.country}
            p extension:         #{employee.extension}
         div.col-sm-6
            p Last Name:         #{employee.lastName}
            p Title of courtesy: #{employee.titleOfCourtesy}
            p Hiredate:          #{employee.hireDate}
            p City:              #{employee.city}
            p Postalcode:        #{employee.postalCode}
            p Home phone:        #{employee.homePhone}
            p Notes:             #{employee.notes}
      include backButton
      input.btn.btn-primary#backButton(type= "button", value= "Back")