extends layout

block content
    div.container
        div.col-lg-12.panel.panel-default
            h1.page-header.text-muted= title
            div
                #orders
                table.table.table-hover.table-striped.table-condensed
                    tr
                        th ID
                        th Date
                        th Name
                        th Address

                        for order in orders
                            tr
                                td
                                    a(href="/orders/"+order._id) #{order._id}
                                td= order.orderDate
                                td= order.shipName
                                td= order.shipAddress
